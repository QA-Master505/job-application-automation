{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["node", "@playwright/test"],

    /* Modules */
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* Path Aliases (optional, add src folders if you use these) */
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@helpers/*": ["src/helpers/*"]
    },

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Output */
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "tests/**/*.ts",
    "tests-examples/**/*.ts",
    "playwright.config.ts"
  ]
}
